  </div>
    <!-- FOOTER BLOCKS -->
    <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_footer" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
  </template>
  <template id="email_designer_snippets_boilerplate" inherit_id="mass_mailing.email_designer_snippets" name="Theme Boilerplate Snippets">
    <xpath expr="//div[@id='email_designer_default_headers']/div[2]" position="inside">
      <!-- HEADER SNIPPETS -->
      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_header_social" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_header_banner" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_text_social.png"/>
    </xpath>
    <xpath expr="//div[@id='email_designer_default_body']/div[2]" position="inside">
      <!-- BODY SNIPPETS -->
      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_three_icon" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_slogan_bar" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_main_content_panel" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
